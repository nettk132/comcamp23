import Container from "./Container.astro";

const isClient = Astro.client !== 'server';

// Retrieve the visit count from localStorage if on the client side.
let visitCount = isClient ? Number(localStorage.getItem("visitCount")) || 0 : 0;

// Increment and save visit count if on the client side.
if (isClient) {
  visitCount += 1;
  localStorage.setItem("visitCount", visitCount);
}
